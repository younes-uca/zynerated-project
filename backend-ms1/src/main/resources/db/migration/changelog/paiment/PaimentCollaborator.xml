<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="paiment_collaborator">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="name" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="code" type="VARCHAR(500)"/>
        <column name="date_paiement" type="TIMESTAMP"/>

        <column name="collaborator_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="coupon_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="paiment_collaborator_state_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="paiment_collaborator"
              baseColumnNames="collaborator_id"
              referencedTableName="collaborator"
              referencedColumnNames="id"
              constraintName="fk_paiment_collaborator_collaborator"/>
      <addForeignKeyConstraint
              baseTableName="paiment_collaborator"
              baseColumnNames="coupon_id"
              referencedTableName="coupon"
              referencedColumnNames="id"
              constraintName="fk_paiment_collaborator_coupon"/>
      <addForeignKeyConstraint
              baseTableName="paiment_collaborator"
              baseColumnNames="paiment_collaborator_state_id"
              referencedTableName="paiment_collaborator_state"
              referencedColumnNames="id"
              constraintName="fk_paiment_collaborator_paiment_collaborator_state"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="paiment_collaborator_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/paiment/PaimentCollaborator.csv"
            tableName="paiment_collaborator">
      <column name="id" type="NUMERIC"/>
          <column name="name" type="STRING"/>
          <column name="description" type="STRING"/>
          <column name="code" type="STRING"/>
          <column name="date_paiement" type="TIMESTAMP"/>
        <column name="collaborator" type="BIGINT"/>
        <column name="coupon" type="BIGINT"/>
        <column name="paiment_collaborator_state" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
